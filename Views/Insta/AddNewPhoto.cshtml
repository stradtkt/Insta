@{
    ViewData["Title"] = "Add Photo";
}
@model Insta.Models.AddPhoto
<div class="container">
<div class="row">
    <div class="col-12 col-sm-8 col-md-8 col-lg-8 col-xl-8 offset-2">
        <div class="card p-5 mt-5 mb-5">
            <div class="card-header text-center">
                <h1>@ViewData["Title"]</h1>
            </div>
            <div class="card-body">
                <form asp-action="ProcessNewPhoto" asp-controller="Insta" method="POST">
                    <div class="form-group">
                        <div class="bg-danger">
                            <span asp-validation-for="image" class="text-center text-white"></span>
                        </div>
                        <br>
                        <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;"></div>
                        <div>
                            <span class=" btn-style btn-round btn btn-default btn-file">
                                <span class="fileinput-new">Select image</span>
                                <span class="fileinput-exists">Change</span>
                                <input type="file" name="image">
                            </span>
                            <a href="#" class="btn-style btn-round btn fileinput-exists" data-dismiss="fileinput">Remove</a>
                        </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="bg-danger">
                            <span asp-validation-for="img_alt" class="text-white text-center"></span>
                        </div>
                        <br>
                        <input asp-for="img_alt" class="form-control" placeholder="Image Alt Tag">
                    </div>
                    <div class="form-group">
                        <div class="bg-danger">
                            <span asp-validation-for="description" class="text-white text-center"></span>
                        </div>
                        <br>
                        <textarea asp-for="description" class="form-control" cols="30" rows="10" placeholder="Image Description"></textarea>
                    </div>
                    <input type="submit" value="Add Photo" class="btn-style btn btn-info btn-round" style="margin: 0 auto; display: block; text-align: center;">
                </form>
            </div>
        </div>
    </div>
</div>
</div>