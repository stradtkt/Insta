@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card p-3 mt-5 mb-5">
                <div class="row">
                    @foreach (var u in ViewBag.users)
                    {
                    <div class="col-3 col-sm-3 col-lg-3 col-xl-3">
                        <div class="card mt-3">
                            <img src="~/images/@u.profile_img" alt="@u.first_name" class="card-img-top">
                            <h4 class="card-title text-center">@u.first_name @u.last_name</h4>
                            <div class="card-body text-center">
                                <p class="card-text">@u.location</p>
                            </div>
                            <div class="card-footer">
                                <span><a href="RequestUser/@u.user_id" class="btn btn-style btn-round ml-4"><i class="fal fa-plus-circle"></i>  Add</a></span>
                                <span><a href="ViewUserProfile/@u.user_id" class="btn btn-style btn-round ml-4"><i class="fal fa-user-circle"></i>  View Profile</a></span>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>