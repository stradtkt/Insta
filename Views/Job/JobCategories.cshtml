<div class="container">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="card p-2 mt-5 mb-5">
                <div class="card-header">
                    <h1 class="text-center">Job Categories</h1>
                </div>
                <div class="card body text-center">
                    @foreach (var c in ViewBag.categories)
                    {
                        <div class="col-md-3">
                            <div class="shadow-lg text-center">
                                <img src="~/images/@c.category_image" width="100%" height="150px">
                                <h3 class="text-center">@c.card_title</h3>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>