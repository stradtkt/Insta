<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Insta</title>
        <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-9ralMzdK1QYsk4yBY680hmsb4/hJ98xK3w0TIaJ3ll4POWpWUYaA2bRjGGujGT8w" crossorigin="anonymous">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/css/jasny-bootstrap.min.css">
        <link rel="stylesheet" href="~/theme/assets/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/theme/assets/css/now-ui-kit.min.css">
        <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
<nav class="navbar navbar-expand-lg fixed-top bg-info">
  <div class="container">
    <a class="navbar-brand">Insta</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
     <div class="collapse navbar-collapse" id="navbarNavDropdown">
         @if(ViewBag.user != null)
         {
            <ul class="navbar-nav">
                <li class="nav-item">
                <a class="nav-link" asp-action="Dashboard" asp-controller="Insta">InstaFeed</a>
                </li>
                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Menu
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" asp-action="AddNewPhoto" asp-controller="Insta">Add Photo</a>
                    <a class="dropdown-item" asp-action="ViewAllPhotos" asp-controller="Insta">View All Photos</a>
                    <a class="dropdown-item" asp-action="Messages" asp-controller="Message">Messages</a>
                </div>
                </li>
            </ul>
         }
         else
         {
             <ul class="navbar-nav">
                 <li class="nav-item">
                     <a asp-action="Register" asp-controller="Home" class="nav-link">Register</a>
                 </li>
                 <li class="nav-item">
                     <a asp-action="Login" asp-controller="Home" class="nav-link">Login</a>
                 </li>
             </ul>
         }
    </div>
  </div>
</nav>
    <div class="container mt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2018 - Insta</p>
        </footer>
    </div>
        <script src="~/theme/assets/js/core/jquery.min.js"></script>
        <script src="~/theme/assets/js/core/bootstrap.min.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/jasny-bootstrap/3.1.3/js/jasny-bootstrap.min.js"></script>
        <script src="~/theme/assets/js/core/popper.min.js"></script>
        <script src="~/theme/assets/js/now-ui-kit.min.js"></script>
        <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
